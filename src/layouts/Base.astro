---
export interface Props {
  title: string;
}
const { title } = Astro.props;
// Estamos trayendo el nombre asignado que tenemos en ese comoponente para que en caso de cambiarlo solo se lo hago en un sitio unicamente
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="h-screen">
    <slot />
  </body>
</html>
